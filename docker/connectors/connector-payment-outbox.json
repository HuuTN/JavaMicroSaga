{
  "name": "payment-outbox-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",
    "database.hostname": "mysql-payment",
    "database.port": "3306",
    "database.user": "root",
    "database.password": "fpt@123",
    "database.server.id": "184055",
    "topic.prefix": "payment",
    "database.server.name": "paymentdb",
    "database.include.list": "payment_service_db",
    "table.include.list": "payment_service_db.outbox_events",
    "include.schema.changes": "false",
    "database.allowPublicKeyRetrieval": "true",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schema-changes.payment",
    "transforms": "unwrap,route",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "false",
    "transforms.unwrap.add.headers": "op",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "(.*)payment_service_db.outbox_events(.*)",
    "transforms.route.replacement": "payment-events"
  }
}
